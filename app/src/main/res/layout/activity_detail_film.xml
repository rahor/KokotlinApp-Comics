<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".DetailFilmActivity" android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" tools:srcCompat="@tools:sample/backgrounds/scenic[16]"
            android:id="@+id/AfficheDetailImageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:id="@+id/descriptionDetailTextView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/AfficheDetailImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:text="@string/decription"/>
</androidx.constraintlayout.widget.ConstraintLayout>